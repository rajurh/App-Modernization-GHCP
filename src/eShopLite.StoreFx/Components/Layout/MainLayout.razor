@inherits LayoutComponentBase

<div class="page">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">eShopLite</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                            <i class="bi bi-house-door"></i> Home
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/products">
                            <i class="bi bi-box-seam"></i> Products
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/stores">
                            <i class="bi bi-shop"></i> Stores
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <main>
            @Body
        </main>
        <hr />
        <footer>
            <p class="text-center text-muted">&copy; @DateTime.Now.Year - eShopLite - Powered by Blazor</p>
        </footer>
    </div>
</div>
